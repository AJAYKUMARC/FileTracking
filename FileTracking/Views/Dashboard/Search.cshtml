@using FileTracking.Models
@model IList<Master>;
<table>
    <tbody>
        <tr>
            <td>
                <form class="row g-3" method="post" asp-controller="Dashboard" asp-action="Search">
                    <div class="col-auto">
                        <label for="barcode" class="visually-hidden"></label>
                        <input type="text" class="form-control" id="barcode" name="barCode" placeholder="BAR CODE" required>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3">Search</button>
                    </div>
                </form>
            </td>
            <td colspan=2></td>
            <td>
                <form class="row g-3" method="post" asp-controller="Dashboard" asp-action="SearchByDate">
                    <div class="col-auto">
                        <label for="barcode" class="visually-hidden"></label>
                        <input type="date" class="form-control" id="stDate" name="startDate" placeholder="Start Date" required>
                    </div>
                    <div class="col-auto">
                        <label for="barcode" class="visually-hidden"></label>
                        <input type="date" class="form-control" id="edDate" name="endDate" placeholder="End Date" required>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-3">Search</button>
                    </div>
                     <div class="col-auto" style="MARGIN-TOP: 3%;">
                        <a href="@Url.Action("GetAll","Dashboard")" class="link-primary">Get All</a>
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>


<div>
    @if (Model != null && Model.Count > 0)
    {
        <table id="resultTable" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>DATE</th>
                    <th>BAR CODE</th>
                    <th>FILE NAME</th>
                    <th>DEPARTMENT</th>
                    <th>COMMENT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>@row.Id</td>
                        <td>@row.Uploaddate</td>
                        <td>@row.Barcode</td>
                        <td>@row.Filename</td>
                        <td>@row.Department</td>
                        <td>@row.Comment</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @if (ViewData["DataFound"] != null)
        {
            <div class="alert alert-secondary" role="alert">
                Data not found
            </div>
        }
    }
</div>
